<resources>

    <!-- Estilo base para MaterialButtons con borde y esquinas redondeadas -->
    <style name="BotonBordesBase" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#001B1E</item>
        <item name="strokeColor">#00FFF0</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilos derivados por tema -->
    <style name="BotonPrimavera" parent="BotonBordesBase">
        <item name="backgroundTint">#4CAF50</item>
        <item name="strokeColor">#81C784</item>
    </style>

    <style name="BotonNieve" parent="BotonBordesBase">
        <item name="backgroundTint">#2196F3</item>
        <item name="strokeColor">#90CAF9</item>
    </style>

    <style name="BotonCalor" parent="BotonBordesBase">
        <item name="backgroundTint">#F44336</item>
        <item name="strokeColor">#FF8A65</item>
    </style>

</resources>
