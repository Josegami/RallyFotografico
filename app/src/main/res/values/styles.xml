<resources>

    <!-- Estilo base para MaterialButtons con borde y esquinas redondeadas -->
    <style name="BotonBordesBase" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FFF0</item> <!-- Neón turquesa -->
        <item name="strokeColor">#00FFF0</item>       <!-- Neón turquesa -->
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilos derivados por tema con solo cambios de color -->
    <style name="BotonPrimavera" parent="BotonBordesBase">
        <item name="android:textColor">#C6FF00</item>  <!-- Verde neón -->
        <item name="strokeColor">#C6FF00</item>
    </style>

    <style name="BotonNieve" parent="BotonBordesBase">
        <item name="android:textColor">#40C4FF</item>  <!-- Azul neón -->
        <item name="strokeColor">#40C4FF</item>
    </style>

    <style name="BotonCalor" parent="BotonBordesBase">
        <item name="android:textColor">#FF5252</item>  <!-- Rojo neón -->
        <item name="strokeColor">#FF5252</item>
    </style>

</resources>
