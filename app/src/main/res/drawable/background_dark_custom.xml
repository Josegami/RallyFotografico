<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo base degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A1A"
                android:endColor="#121212"
                android:angle="90" />
        </shape>
    </item>

    <!-- Banda superior -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2A2A2A"
                android:endColor="#1A1A1A"
                android:angle="270" />
            <size android:height="70dp"/>
        </shape>
    </item>

    <!-- Círculo decorativo translúcido -->
    <item android:top="420dp" android:left="90dp">
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF" />
            <size android:width="160dp" android:height="160dp"/>
        </shape>
    </item>

    <!-- Rombo grande visible -->
    <item android:left="0dp" android:top="10dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#2D2D2D" />
                <size
                    android:width="240dp"
                    android:height="270dp" />
            </shape>
        </rotate>
    </item>

    <!-- Rombo pequeño -->
    <item android:right="30dp" android:top="300dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#1E1E1E" />
                <size
                    android:width="100dp"
                    android:height="130dp" />
            </shape>
        </rotate>
    </item>

</layer-list>
