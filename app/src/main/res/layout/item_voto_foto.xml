<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_gravity="center"
    android:elevation="8dp"
    app:cardBackgroundColor="#001B1E"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imagenFoto"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Foto del participante" />

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participante"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#00FFF0"
            android:paddingBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVotar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votar"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            app:backgroundTint="#001B1E"
            app:strokeColor="#00FFF0"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
