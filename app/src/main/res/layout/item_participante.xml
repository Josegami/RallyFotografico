<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#444949">

    <TextView
        android:id="@+id/tvCorreoParticipante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:text="correo@ejemplo.com"
        android:padding="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminarParticipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="#FFFFFF"
        app:backgroundTint="#001B1E"
        app:strokeColor="#FF1744"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:textColor="#FFFFFF"
        app:backgroundTint="#001B1E"
        app:strokeColor="#00FFF0"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp"
        android:textAllCaps="true" />
</LinearLayout>
