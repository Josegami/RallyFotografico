<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvPlazoFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plazo de recepción"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvLimiteFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Límite de fotos"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvPlazoVotacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plazo de votación"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvFormato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formatos permitidos"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

</LinearLayout>
