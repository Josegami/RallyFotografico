<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_custom"
    tools:context=".activities.ParticipanteActivity">

    <!-- Título llamativo -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-light"
        android:text="PHOTOHUB"
        android:textColor="#D1D1D1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botones estilo neón -->
    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Subir Foto -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubirFoto"
            style="@style/Widget.Material3.Button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#002B36"
            android:onClick="subirFoto"
            android:text="Subir Foto"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="40dp"
            app:iconPadding="8dp"
            app:iconSize="42dp"
            app:strokeColor="#00FFAA"
            app:strokeWidth="3dp" />

        <!-- Editar Perfil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            style="@style/Widget.Material3.Button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="Editar Perfil"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1C1C1C"
            app:cornerRadius="40dp"
            app:strokeColor="#FF00CC"
            app:strokeWidth="3dp"
            android:layout_marginTop="16dp"
            android:onClick="editar" />

        <!-- Ver Mis Fotos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMisFotos"
            style="@style/Widget.Material3.Button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="Mis Fotos"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1A1A2E"
            app:cornerRadius="40dp"
            app:strokeColor="#00CFFF"
            app:strokeWidth="3dp"
            android:layout_marginTop="16dp"
            android:onClick="verMisFotos" />

        <!-- Cerrar Sesión -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="Cerrar Sesión"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#330000"
            app:cornerRadius="40dp"
            app:strokeColor="#FF5555"
            app:strokeWidth="3dp"
            android:layout_marginTop="24dp"
            android:onClick="cerrarSesion" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="311dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonera"
        app:srcCompat="@drawable/camera_minimalistic_svgrepo_com" />

</androidx.constraintlayout.widget.ConstraintLayout>
