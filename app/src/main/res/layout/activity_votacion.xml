<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/background_dark_custom">

    <TextView
        android:id="@+id/tituloVotacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vota tus fotos favoritas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#00FFF0"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVotos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layoutManager_orientation="horizontal"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        app:srcCompat="@drawable/camera_minimalistic_svgrepo_com" />

</LinearLayout>
